---
import AppWindow from "phosphor-astro/AppWindow.astro";
import CaretRight from "phosphor-astro/CaretRight.astro";

const proyects = [
    {
        title: "Dynamic Solutions",
        description: "Consultora de desarrollo de software",
        src: "https://beta.dynamicsolutions.tech/",
        icon: AppWindow,
    },
];
---

<div class="flex flex-col text-white pt-20" id="proyects">
    <div class="flex flex-col w-[90%] max-w-7xl m-auto">
        {
            proyects.map((proyect) => (
                <div class="flex flex-col rounded-xl bg-white/5 backdrop-blur-sm border border-white/5 p-2 h-[120px]">
                    <a
                        href={proyect.src}
                        target="_blank"
                        class="flex gap-4 size-full items-center justify-between"
                    >
                        <proyect.icon class="h-full justify-center" />
                        <div class="flex flex-col">
                            <h1 class="text-lg">{proyect.title}</h1>
                            <p class="text-sm">{proyect.description}</p>
                        </div>

                        <CaretRight class="size-6 ml-auto" />
                    </a>
                </div>
            ))
        }
    </div>
</div>
